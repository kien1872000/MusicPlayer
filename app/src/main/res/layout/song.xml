<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vumeter="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/song_image_parent"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        >
        <ImageView
            android:id="@+id/song_image"
            android:src="@drawable/song_image"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/song_image_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Song name"
        android:ellipsize="end"
        android:maxLines="1"/>
     <TextView
         android:id="@+id/song_artists"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/song_image_parent"
         android:layout_below="@+id/song_name"
         android:layout_marginStart="30dp"
         android:textColor="#D6C4C4"
         android:textSize="15dp"
         android:layout_marginTop="5dp"
         android:text="Artist name"/>

</RelativeLayout>