<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Activities.PlaylistDetailActivity">
    <ImageView
        android:id="@+id/playlist_detail_backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/back"/>
    <ImageView
        android:id="@+id/playlist_detail_favoriteButton"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:src="@drawable/heart"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/playlist_detail_item_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="100dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/playlist_image_detail"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/song_image"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/playlist_name_detail"
        android:text="Không có bài hát nào"
        android:textSize="30dp"
        android:maxWidth="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/playlist_detail_item_parent"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/playlist_artist_detail"
        android:layout_width="wrap_content"
        android:maxWidth="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#D6C4C4"
        android:layout_marginBottom="25dp"
        android:textSize="20dp"
        android:layout_below="@id/playlist_name_detail"
        android:text="Artist name"/>
    <LinearLayout
        android:id="@+id/playlist_detail_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playlist_artist_detail"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/playlist_prevButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/previous"
             />
        <ImageView
            android:id="@+id/playlist_playButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/play"
            />

        <ImageView
            android:id="@+id/playlist_nextButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/next" />

    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/playlist_detail_action"
        android:id="@+id/playlist_name_bar"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/playlist_name"
            android:text="Playlist name"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/playlist_detail_addButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/add" />
        <ImageView
            android:id="@+id/playlist_shuffleButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/playlist_detail_addButton"
            android:layout_marginLeft="15dp"
            android:src="@drawable/shuffle"
            app:tint="@color/black"/>
        <ImageView
            android:id="@+id/playlist_repeatButton"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@id/playlist_shuffleButton"
            android:src="@drawable/refresh"
            app:tint="@color/black" />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#302f2f"
        android:layout_below="@+id/playlist_name_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/playlist_songs_listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>